#!/usr/bin/env python3
import sys
from pathlib import Path

# Find the project root, which is one level up from this script's directory.
script_dir = Path(__file__).resolve().parent
project_root = script_dir.parent

# The directory containing your package is 'tools/'.
# We add this to the Python path.
package_search_path = project_root / 'tools'
sys.path.insert(0, str(package_search_path))

# Now that Python knows to look inside the 'tools' directory,
# we can import 'catp' and its 'main' function.
# NOTE: The package name is taken from the directory name 'catp'.
from catp.cli import main

if __name__ == "__main__":
    sys.exit(main())
